#!/usr/bin/env ruby

require 'lib/mirror'

def usage
  puts "ruby-mirror [-v] <filename>"
  return true
end

unless (ARGV.size == 1 && File.exist?(ARGV[0])) or 
       (ARGV.size == 2 && ARGV[0] == "-v" && File.exist?(ARGV[1]))
  usage and exit 1
end

r = RubyMirror.new(ARGV[ARGV.size - 1], (ARGV[0] == "-v"))
r.run
